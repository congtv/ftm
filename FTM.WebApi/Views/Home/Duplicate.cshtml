@model IEnumerable<FTM.WebApi.Models.EventErrorResult>

@{
    ViewData["Title"] = "Kiểm tra book trùng";
}

@section Menu
    {
    <div class="menu">
        <ul class="list">
            <li>
                <a class="a__reload" asp-action="Index">
                    <i class="material-icons">home</i>
                    <span>HOME</span>
                </a>
            </li>
            <li>
                <a class="a__reload" asp-action="Setting">
                    <i class="material-icons">layers</i>
                    <span>CÀI ĐẶT PHÒNG CHO PHÉP BOOK</span>
                </a>
            </li>
            <li class="active">
                <a class="a__reload" asp-action="Duplicate">
                    <i class="material-icons">widgets</i>
                    <span>DANH SÁCH BOOK TRÙNG</span>
                </a>
            </li>
            <li>
                <a id="renewGoogle">
                    <i class="material-icons">supervisor_account</i>
                    <span>ĐĂNG NHẬP LẠI TÀI KHOẢN GOOGLE</span>
                </a>
            </li>
            <li>
                <a asp-action="Logout" asp-controller="Account">
                    <i class="material-icons">input</i>
                    <span>SIGNOUT</span>
                </a>
            </li>
        </ul>
    </div>
}

@section Scripts{
    <script>
        $(document).ready(function () {
            var count = @ViewData["Count"];
            if (count > 0) {
                swal({
                    title: "THÔNG BÁO",
                    type: "warning",
                    text: "Tìm thấy @ViewData["Count"] lịch bị trùng!!!"
                });
            }
            else {
                 swal({
                    title: "THÔNG BÁO",
                    type: "warning",
                    text: "Không tìm bất cứ lịch trùng nào!!!"
                });
            }
        });
    </script>
}

@section Css{ 

}

<div class="row clearfix">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="card">
            <div data-toggle="collapse" data-target="#listDuplicate" class="header">
                <h2>DANH SÁCH BOOK TRÙNG</h2>
            </div>
            <div id="listDuplicate" class="body">
                <div class="table-responsive">
                    <table id="duplicateTable" class="table table-hover dashboard-task-infos">
                        <thead>
                            <tr>
                                <th>Tiêu đề</th>
                                <th>Người tạo</th>
                                <th>Mô tả</th>
                                <th>Link</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @item.Summary
                                </td>
                                <td>
                                    @item.Creator
                                </td>
                                <td>
                                    @item.Description
                                </td>
                                <td>
                                    <a type="button" href="@item.HtmlLink" target="_blank" class="btn bg-teal waves-effect"><i class="material-icons">link</i><span>Đi đến lịch</span></a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
